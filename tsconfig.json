{
  "include": ["src", "types"],
  "exclude": ["build"],
  "compilerOptions": {
    "outDir": "./build",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ES6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@scripts/*": ["./src/scripts/*"],
    }
  }
}